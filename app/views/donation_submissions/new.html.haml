%h3 New Donation Submission
= simple_form_for @donation do |f|
  .row
    .col-sm-6.col-xs-12
      = f.association :user, as: :select, collection: @coordinator
      .col-sm-3
        = label_tag "Pending Cash Amount"
      .col-sm-3
        = label_tag "Pending Cheque Amount"
  .row
    .col-sm-6.col-xs-12
      = f.input :submitted_by_cash, label: 'Cash Submitted'
  .row
    .col-sm-6.col-xs-12
      = f.input :submitted_by_cheque, label: 'Cheque Submitted'
  %br
  %br
  .row
    .col-md-2
      = f.submit :save, class: 'btn btn-primary'
