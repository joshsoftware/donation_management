- if current_user.is_admin?
  = button_to "Export To CSV", submissions_reports_path(:format => :csv), :class => "btn btn-success export", method: :get
.bs-pending
  %table.table.table-hover
    %tr
      %th
        Cash
      %th 
        Cheque
      %th 
        Submission Date
      %th
        Submited By
      %th 
        Received By
    - @pendings.each do |submission|
      %tr 
        %td= submission.user.cash_amount_pending 
        %td= submission.user.cheque_amount_pending
        %td= submission.submission_date
        - sub_display_name = submission.user.name.nil? ? submission.user.email : submission.user.name
        %td= sub_display_name
        - rec_display_name = current_user.name.nil? ? current_user.email : current_user.name
        %td= rec_display_name
