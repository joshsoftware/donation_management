.bs-pending
  %table.table.table-hover
    %tr
      %th
        Cash
      %th 
        Cheque
      %th 
        Submission Date
      %th
        Submited By
      %th 
        Received By
    - @pendings.each do |submission|
      %tr 
        %th= submission.user.cash_amount_pending 
        %th= submission.user.cheque_amount_pending
        %th= submission.submission_date
        - sub_display_name = submission.user.name.nil? ? submission.user.email : submission.user.name
        %th= sub_display_name
        - rec_display_name = current_user.name.nil? ? current_user.email : current_user.name
        %th= rec_display_name
